@model TSOnline.Models.TRASUA

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layoutuser.cshtml";
}
<div class="container" style="width: 30%;margin-top:30px;padding-right:0px">
    <h2 class="text-center">SỬA THÔNG TIN</h2>

    @using (Html.BeginForm("Edit","Admin",FormMethod.Post,new { enctype = "multipart/form-data"}))
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaTS)

        <div class="form-group">
            @Html.LabelFor(model => model.TenTS, new { @class = "control-label col-md-4" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.TenTS , new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenTS)
            </div>
        </div>        

        <div class="form-group">
            @Html.LabelFor(model => model.Giaban, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.Giaban, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Giaban)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Anhbia, new { @class = "control-label col-md-4" })
            <div class="col-md-12">
                <img src="@Url.Content("~/img/"+ Model.Anhbia)" style="width:120px" />
                <input title="Chọn Ảnh Mới" type="file" name="fileupload" required=""/>                
                @*thong bao trung*@
                @ViewBag.Thongbao
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaLoai, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-12">
                @Html.DropDownList("MaLoai")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-12">
                <input type="submit" value="Lưu" class="btn_1" />
            </div>
        </div>
    </div>
    }
    <div style="position: absolute;left: 12%;">
        <a class="btn_1" href="@Url.Action("TraSua","Admin")">Trở Lại Danh Sách</a>
    </div>
</div>
    

