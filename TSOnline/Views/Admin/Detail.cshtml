@model TSOnline.Models.TRASUA

@{
    ViewBag.Title = "Details";

}
@if (Session["Taikhoanadmin"] != null)
{
    <h2>Detail</h2>

    <div>

        <hr />
        <dl class="dl-horizontal">
            <dt>
                Tên trà sữa:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TenTS)
            </dd>

            <dt>
                Giá bán:
            </dt>

            <dd>
                @String.Format("{0:0,0}", Model.Giaban) VND
            </dd>

            <dt>
                Ảnh minh họa
            </dt>

            <dd>
                <img src="@Url.Content("~/images/"+ Model.Anhbia)" width="250" height="250" />
            </dd>

            <dt>
                Mã loại:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LOAI.TenLoai)
            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Edit", "sua", new { id = Model.MaTS }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
}
else if (Session["Taikhoan"] != null)
{
@section scripts{
    <script>
        alert("Bạn không phải là Admin");
    </script>
    @Html.Action("Index", "TraSua")
}
}
else
{
@Html.Action("DangNhap", "NguoiDung")
}
