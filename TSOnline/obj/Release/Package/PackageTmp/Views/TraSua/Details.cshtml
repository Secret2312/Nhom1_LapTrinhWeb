<style type="text/css">
    #Datmua a{
        clear:both;   background-color:red;
        color:white;  width:120px;    height:35px;
        display:block;        float:right;       text-align:center;
        padding-top:10px;       text-decoration:none;       font-weight:bold;
    }
    #Datmua a:hover {
        background-color:gray;
        color: red;
    }
</style>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<h3> THÔNG TIN TRÀ SỮA</h3>
<div>
    <div style="width:40%; float:left; border-left: dotted 1px; border-color:azure">
        <img src="~/images/@Model.Anhbia" width="100" />
    </div>
    <div style="width:60%; float:left; padding:10px">
        <h4 style="font-weight:bold; color:red">Tên Trà Sữa: @Model.TenTS </h4>
        <p style="font-weight:bold"> Giá bán: <span style="color:red; font-size:16pt "> @Model.Giaban VNĐ </span></p>
        <a href="@Url.Action("GioHang","GioHang")" style="color:white;font-weight:bold;text-decoration:none;">
            <img src="~/images/giohang.gif" /> Giỏ Hàng (@ViewBag.Tongsoluong)
        </a>
    </div>
    <div>
        <div id="Datmua">
            <a href="@Url.Action("ThemGioHang", "GioHang", new { @iMaTS = @Model.MaTS, strURL=Request.Url.ToString() })">
                ĐẶT MUA
            </a>
        </div>
    </div>
</div>
