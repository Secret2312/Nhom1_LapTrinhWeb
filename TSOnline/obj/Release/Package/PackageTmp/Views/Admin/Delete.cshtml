@model TSOnline.Models.TRASUA

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xóa thông tin của trà sữa này !</h2>

<h3>Xác nhận</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên trà sữa
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenTS)
        </dd>

        <dt>
            Giá bán
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Giaban)
        </dd>

        <dt>
            Ảnh minh họa
        </dt>

        <dd>
            <img src="@Url.Content("~/images/"+ Model.Anhbia)" width="250" height="250" />
        </dd>

        <dt>
            Mã loại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LOAI.MaLoai)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "TraSua","Admin")
        </div>
    }
</div>
